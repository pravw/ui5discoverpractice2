
<mvc:View
    controllerName="com.po.countdowntimer.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Page
        id="page"
        class="sapUiResponsiveContentPadding"
        title="{i18n>title}">

        <content>

            <Toolbar class="sapUiTinyMarginTop">
                <Title text="ListHeader" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://filter"
                    press="onFilterButtonPressed" />
                <Button
                    icon="sap-icon://sort"
                    press="onSortButtonPressed" />
                    <Button
                    icon="sap-icon://group-2"
                    press="onGroupButtonPressed" />
                  <Button
                    icon="sap-icon://add"
                    press="onPressAddNewProducts" />
            </Toolbar>

            <!-- List -->
            <List
                id="idList"
                items="{
                path:'product>/items',
                groupHeaderFactory:'.formatter.formatGroupHeader',
                filters: [{
                        path: 'Inactive',
                        operator: 'NE',
                        value1: true
                        }],
                        sorter: [{
                         path: 'Name',
                         descending: false
                                }] 
                }"
                backgroundDesign="Transparent"
                mode="Delete"
                delete="onPressDelete"
                growingThreshold="20"
                
                >
                <infoToolbar>
                <Toolbar id="idFilterInfoToolbar" visible="false">
                
                <Text id="idFilterText" />
                
                
                </Toolbar>
                </infoToolbar>


                <items>
                        <ObjectListItem title="{product>Name}" 
                        number="{
                        parts:['product>Price','product>Currency'],
                        type: 'sap.ui.model.type.Currency',
                        formatOptions:{showmeasure:false}}"
                        numberState="{= ${product>Price} > 20 ? 'Warning' : 'None'}"
                                            numberUnit="{product>Currency}">
                         
                        <attributes>
                        <ObjectAttribute 
                        title="Category" 
                        text="{
                        path:  'product>Category',
                        formatter:'.formatter.formatCategory'
                        }"/>
                        <ObjectAttribute 
                        title="ReleaseDate" 
                        text="{

                        path:'product>ReleaseDate',
                        type:'sap.ui.model.type.Date',
                        formatOptions:{
                            source:{ pattern :'yyyy-MM-ddTHH:mm:ss.SSSX'},
                            style:'short'
                        }
                        }"/>
                        <ObjectAttribute 
                        visible="{= !!${product>Width} &amp;&amp; !!${product>Height} &amp;&amp; !!${product>Depth}}"
                        text="{product>Width} x {product>Height} x {product>Depth} cm" />
                       
                        </attributes>
                        <firstStatus>
                        <ObjectStatus 
                        text="{
                        path:'product>DiscontinuedDate',
                        formatter:'.formatter.formatAvailabilityText' }"
                        state="{ path:'product>DiscontinuedDate',
                        formatter:'.formatter.formatAvailabilityState'}" />
                        </firstStatus>
                        </ObjectListItem>
                        </items>
                         </List>
                        </content>

        <footer>
            <Toolbar id="tl">
                <Text
                    id="tx"
                    text="I AM FOOTER" />
            </Toolbar>
        </footer>

    </Page>
</mvc:View>
 
