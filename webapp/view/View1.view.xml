
<mvc:View
    controllerName="com.po.countdowntimer.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Page
        id="page"
        class="sapUiResponsiveContentPadding"
        title="{i18n>title}">

        <content>

            <Toolbar class="sapUiTinyMarginTop">
                <Title text="ListHeader" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://filter"
                    press="onFilterButtonPressed" />
                <Button
                    icon="sap-icon://sort"
                    press="onSortButtonPressed" />
                    <Button
                    icon="sap-icon://group-2"
                    press="onGroupButtonPressed" />
                  <Button
                    icon="sap-icon://add"
                    press="onPressAddNewProducts" />
            </Toolbar>

            <!-- List -->
            <List
                id="idList"
                items="{
                path:'/Products',
                groupHeaderFactory:'.formatter.formatGroupHeader'
                }"
                backgroundDesign="Transparent"
                mode="Delete"
                delete="onPressDelete"
                growingThreshold="20"
                
                >
                <infoToolbar>
                <Toolbar id="idFilterInfoToolbar" visible="false">
                
                <Text id="idFilterText" />
                
                
                </Toolbar>
                </infoToolbar>


                <items>
                        <ObjectListItem title="{Name}" 
                        number="{
                        parts:['Price','Currency'],
                        type: 'sap.ui.model.type.Currency',
                        formatOptions:{showmeasure:false}}"
                        numberState="{= ${Price} > 20 ? 'Warning' : 'None'}"
                                            numberUnit="EUR">
                         
                        <attributes>
                        <ObjectAttribute 
                        title="Category" 
                        text="{
                        path:  'Category',
                        formatter:'.formatter.formatCategory'
                        }"/>
                        <ObjectAttribute 
                        title="ReleaseDate" 
                        text="{
                        path:'ReleaseDate',
                        type:'sap.ui.model.type.Date',
                        formatOptions:{
                            style:'short'
                        }
                        }"/>
                        </attributes>
                        <firstStatus>
                        <ObjectStatus 
                        text="{
                        path:'DiscontinuedDate',
                        formatter:'.formatter.formatAvailabilityText' }"
                        state="{ path:'DiscontinuedDate',
                        formatter:'.formatter.formatAvailabilityState'}" />
                        </firstStatus>
                        </ObjectListItem>
                        </items>
                         </List>
                        </content>

        <footer>
            <Toolbar id="tl">
                <Text
                    id="tx"
                    text="I AM FOOTER" />
            </Toolbar>
        </footer>

    </Page>
</mvc:View>
 
