<mvc:View
    controllerName="com.po.countdowntimer.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"

    xmlns="sap.m"
 
>
    <Page
        id="page"
        class="sapUiResponsiveContentPadding"
        title="{i18n>title}"
    >
     <content>
    <core:Fragment type="XML"  fragmentName="com.po.countdowntimer.view.fragments.CreateProduct"/>
       
        <List
            id="idList"
            class="sapUiTinyMarginTop"
            backgroundDesign="Transparent"
            headerText="Products"
            mode="Delete"
            delete="onPressDelete"
        />
         </content>

        <footer>
            <Toolbar id="tl">
                <Text
                    id="tx"
                    text="I AM FOOTER"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
