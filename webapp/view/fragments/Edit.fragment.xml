<core:FragmentDefinition
  xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">
    <Dialog title="{i18n>editProduct}" contentWidth="800px" afterClose="onAftercloseDialog">
     <content>
         <form:SimpleForm
            id="simpleformEdit"
            layout="ResponsiveGridLayout"
            editable="true"
            breakpointM="600px"
            breakpointL="1024px"
            breakpointXL="1440px"
            emptySpanM="0"
            emptySpanL="1"
            emptySpanXL="1"
            labelSpanS="12"
            labelSpanM="3"
            labelSpanL="3"
            adjustLabelSpan="false"
            columnsL="2"
            columnsXL="2"
        >
            <form:content>
                <core:Title    text="{i18n>productDetails}"/>
                <Label          id="idlableEdit" text="{i18n>productName}" />
                <Input
                    id="idEditProductName"
                    maxLength="10"
                    value="{Name}"
                    valueLiveUpdate="true"
                />
                <Label   id="idEditcategory" text="{i18n>category}" />
                <ComboBox
                    id="idcategoryEdit"
                    placeholder="category"
                    selectedKey="{Category/ID}"
                    items="{/Categories}"
                    enabled="false"
                >
                    <items>
                        <core:Item
                            key="{ID}"
                            text="{Name}"
                        />
                        
                    </items>
                </ComboBox>
                <Label   
                id="labelEdit" 
                text="{i18n>price}" 
                />
                 <Input
                id="idPrice"
                class="sapUiTinyMarginEnd"
                valueLiveUpdate="true"
                type="Number"
                width="20rem"
                maxLength="10"
                value="{Price}"/>
             
            <Input id="input2"
                            value="EUR"
                            editable="false"
                        >
            <layoutData>
            <l:GridData span="XL1 L2 M3 S12"/>
            </layoutData>
            </Input>
            
            <core:Title    text="{i18n>dates}"/>
            <Label  required="true"  id="labelreleaseDate" text="{i18n>releasedate}" />
            <DatePicker
                id="idEditReleaseDate"
                dateValue="{ReleaseDate}"  
            />
            <Label id="labeldiscountDate" text="{i18n>discontinueddate}" />
              <DatePicker
                id="idEditDiscontinued"
                dateValue="{DiscontinuedDate}"
                valueState= "{= ${validate>/DiscontinuedDate} ?  'None' : 'Error' }"
            />
            <Label id="RatingEdit" text="{i18n>ratingIndicator}" />
            <RatingIndicator
                id="idEditRating"
                value="{Rating}"
                maxValue="5"
                editable="true"
                />
            
            </form:content>
            </form:SimpleForm>
       
       

     </content>

    <beginButton>
        <Button
            id="buttonEdit"
            text="{i18n>update}"
           
            press="onPressUpdateproduct"
            type="Emphasized"
        />
    </beginButton>

    <endButton>
    <Button
            id="buttonEndEdit"
             text="{i18n>create}"
            press="onPressCancelEditproduct"
            type="Emphasized"
        />
    </endButton>
    </Dialog>
  </core:FragmentDefinition>