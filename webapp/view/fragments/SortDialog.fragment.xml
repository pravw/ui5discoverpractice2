<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog id="sortDialog" confirm="onConfirmSort">
		<sortItems>
			<ViewSettingsItem text="{i18n>productName}" key="Name" selected="true" /> 
			<ViewSettingsItem text="{i18n>price}" key="Price" />
			<ViewSettingsItem text="{i18n>releaseDate}" key="ReleaseDate" />
		</sortItems>
        </ViewSettingsDialog>
        </core:FragmentDefinition>